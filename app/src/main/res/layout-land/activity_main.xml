<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_field_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_margin="20dp"
        android:layout_weight="5"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="6">

        <Button
            android:id="@+id/delete_all_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="bottom|center"
            android:layout_weight="4"
            android:text="c"
            android:textSize="30sp" />

        <Button
            android:id="@+id/open_parenthesis_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="bottom|center"
            android:text="("
            android:textSize="30sp" />

        <Button
            android:id="@+id/close_parenthesis_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="bottom|center"
            android:text=")"
            android:textSize="30sp" />

        <Button
            android:id="@+id/divide_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="bottom|center"
            android:text="/"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="6">

        <Button
            android:id="@+id/seven_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="bottom|center"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/eight_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="bottom|center"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nine_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="9"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="bottom|center"
            android:text="*"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="6">

        <Button
            android:id="@+id/four_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="4"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/five_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="5"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/six_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="6"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/subtract_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="-"
            android:gravity="bottom|center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="6">

        <Button
            android:id="@+id/three_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="3"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/two_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="2"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/one_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="1"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/fold_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:text="+"
            android:gravity="bottom|center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="6">

        <Button
            android:id="@+id/null_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:text="0"
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/comma_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:text="."
            android:gravity="bottom|center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/equals_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:text="="
            android:gravity="bottom|center"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>